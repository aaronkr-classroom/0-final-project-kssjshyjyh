<main class="">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
      <div class="pt-5">
        <h1>Add New Book</h1>
        <p>Add to new book in database</p>
  
        <div class="row">
          <div class="col-lg-6 mb-3 mt-3">
            <div class="data-form">
              <form action="/books/create" method="POST">
                <!-- 사용자 계정을 생성하기 위한 폼을 생성한다 -->
                <div class="form-group">
                  <label for="title">책 이름</label>
                  <input
                    type="text"
                    name="title"
                    id="booktitle"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label for="subtitle">책 부제목</label
                  ><!-- 폼의 input으로서 사용자 속성 추가 -->
                  <input
                    type="text"
                    name="subtitle"
                    id="subtitle"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label for="authors">저자</label>
                  <input
                    type="text"
                    name="authors"
                    id="authors"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label for="publisher">출판사</label
                  ><!-- email과 password 필드의 보호를 위한 HTML 속성 적용 -->
                  <input
                    type="text"
                    name="publisher"
                    id="publisher"
                    class="form-control"
                  />
                </div>
                
                <div class="form-group mb-3">
                  <label for="BookImg">책 이미지 링크</label>
                  <input
                    type="text"
                    name="BookImg"
                    id="BookImg"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-lg ut-red">
                    등록하기
                  </button>
                </div>
              </form>
            </div>
          </div>
  
          <div class="col-lg-6 text-center text-lg-start mb-3 mt-5">
            <figure>
              <img
                src="https://cdn.pixabay.com/photo/2016/11/23/18/17/men-1854191_960_720.jpg"
              />
            </figure>
          </div>
        </div>
      </div>
    </div>
  </main>
  